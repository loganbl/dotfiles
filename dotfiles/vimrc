execute pathogen#infect()

"Apperance"
syntax enable
set background=dark
colorscheme darktango
set gfn=Droid\ Sans\ Mono\ 12

"Searching"
set ignorecase
set smartcase
set hlsearch
set incsearch
set showmatch



"General Settings"
set tabstop=8
set laststatus=2
set shiftwidth=8
set autoread    "Reload files changed outside vim"
set showmode    "Show current mode down at the bottom"
set textwidth=80
set columns=80
filetype plugin on
filetype indent on


"Operation"
set backspace=eol,start,indent
set ffs=unix
set noerrorbells
set novisualbell
set t_vb=
set nocompatible
set pastetoggle=<F2>


"Fancy Stuff"
set statusline=%<%f\ %h%m%r%=%-14.(%l,%c%V%)\ %P
match Todo /\s\+$/

" Remove the Windows ^M - when the encodings gets messed up
noremap <Leader>m mmHmt:%s/<C-V><cr>//ge<cr>'tzt'm

noremap <F8> :call CompileRun()<CR>
function! CompileRun()
    if &filetype == 'c'
        :w
        :!gcc % -o %< && ./%<
    elseif &filetype == 'cpp'
        :w
        :!g++ -std=c++0x % -o %< && ./%<
    else
        :echo "Nothing to do with this filetype"
    endif
endfunction

